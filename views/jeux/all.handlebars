<h1>Tous les jeux blockchains</h1>
    <section class="section">
        <div class="container">        
            <div class="tile is-ancestor">
                {{#each posts}}
                <div class="tile is-parent col-md-4">
                    <article class="tile is-child notification">
                    <a href="/jeu/{{_id}}"><p class="title">{{name}}</p></a>
                    <p class="subtitle">{{genre}}</p>
                    <p class="description">{{description}}</p>
                    <figure class="image is-4by3">
                        <img src="{{image}}" alt="">
                    </figure>
                    <p>Publi√© par {{author}}, le {{moment format="DD-MM-YY"}}</p>
                    </article>
                </div>
                {{/each}}
            </div>        
        </div>
    </section>
    